{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run App (Maven)",
      "type": "shell",
      "command": "mvn",
      "args": ["javafx:run"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    }
  ]
}
